{
  "name": "roblox-studio-mcp-server",
  "version": "1.0.0",
  "description": "Roblox Studio Model Context Protocol(MCP) Server implementation with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "studio-server": "node dist/studio-integration/studio-mcp-server.js",
    "studio-server:dev": "ts-node src/studio-integration/studio-mcp-server.ts",
    "studio-server:test": "node dist/studio-integration/http-only-server.js",
    "build-plugin": "node dist/studio-integration/build-plugin.js",
    "setup-studio": "npm run build && npm run build-plugin",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:security": "npm test -- --testPathPattern=\"security\"",
    "test:performance": "k6 run performance/k6-load-test.js",
    "test:websockets": "k6 run performance/socket-test.js",
    "docker:build": "docker build -t roblox-studio-mcp-server .",
    "docker:run": "docker run -p 3000:3000 -v .env:/app/.env roblox-studio-mcp-server",
    "docs": "jsdoc -c jsdoc.json",
    "docs:dev": "docsify serve docs",
    "audit": "npm audit --production",
    "audit:fix": "npm audit fix --production",
    "security:check": "npm run audit && npm run snyk"
  },
  "keywords": [
    "roblox",
    "studio",
    "mcp",
    "model-context-protocol",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "rate-limiter-flexible": "^2.4.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "better-docs": "^2.7.2",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
